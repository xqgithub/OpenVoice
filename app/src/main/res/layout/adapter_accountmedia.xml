<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivMediaImagePreview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedCornerImageStyle2"
        tools:src="@drawable/icon_default_avatar" />

    <ImageView
        android:id="@+id/mediaPlayDisplay"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/sivMediaImagePreview"
        app:layout_constraintEnd_toEndOf="@+id/sivMediaImagePreview"
        app:layout_constraintStart_toStartOf="@+id/sivMediaImagePreview"
        app:layout_constraintTop_toTopOf="@+id/sivMediaImagePreview"
        app:srcCompat="@drawable/ic_opv_account_media_play"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>