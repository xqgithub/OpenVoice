<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="130dp"
    android:layout_height="wrap_content">

    <com.shannon.android.lib.components.ShapeableConstraintLayout
        android:id="@+id/sclMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_background_menu"
        android:paddingVertical="10dp">

        <com.shannon.openvoice.components.ImageAndTextUi
            android:id="@+id/itAddBlacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewDividingLine1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_0DFFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/itAddBlacklist" />

        <com.shannon.openvoice.components.ImageAndTextUi
            android:id="@+id/itReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDividingLine1" />
    </com.shannon.android.lib.components.ShapeableConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>