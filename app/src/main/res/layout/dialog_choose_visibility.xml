<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_1f1f1f_r24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/publicView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp"
            android:text="@string/desc_jurisdiction_open"
            android:textColor="@color/color_selector_visibility"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_visibility_public_tag"
            app:drawableTint="@color/color_selector_visibility"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_0DFFFFFF" />

        <TextView
            android:id="@+id/unlistedView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp"
            android:text="@string/desc_jurisdiction_private"
            android:textColor="@color/color_selector_visibility"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_visibility_unlisted_tag"
            app:drawableTint="@color/color_selector_visibility"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_0DFFFFFF" />

        <TextView
            android:id="@+id/privateView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp"
            android:text="@string/desc_jurisdiction_followers"
            android:textColor="@color/color_selector_visibility"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_visibility_private_tag"
            app:drawableTint="@color/color_selector_visibility"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_0DFFFFFF" />

        <TextView
            android:id="@+id/directView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="28dp"
            android:text="@string/desc_jurisdiction_letter"
            android:textColor="@color/color_selector_visibility"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/icon_visibility_direct_tag"
            app:drawableTint="@color/color_selector_visibility"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


    <TextView
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_1f1f1f_r24"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/cancel"
        android:textColor="@color/color_EC5143"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>