<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OpenVoice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbarId">@id/toolbarLayout</item>
        <item name="navigationButtonId">@id/navigationButton</item>
        <item name="titleViewId">@id/titleView</item>
        <item name="textCellStyle">@style/DefaultTextCellStyle</item>
        <item name="switchCellStyle">@style/DefaultTextSwitchStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="confirmDialogStyle">@style/TransparentDialogNoAnimation</item>
    </style>

    <style name="Theme.OpenVoice" parent="Base.Theme.OpenVoice">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_2284F6</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorLink">@color/color_737AAE</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/windowBackgroundColor</item>
        <item name="navigationBarBackground">@color/navigationBarBackgroundColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="toolbarBackground">@color/toolbarBackgroundColor</item>
        <item name="iconTintOnPrimary">@color/black</item>
        <item name="iconTintColorSecondary">@color/black</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="colorLoginInputboxBg">@color/color_26FFFFFF</item>
        <item name="colormodelsuc">@color/color_86FBD5</item>
        <item name="colormodelfail">@color/color_FF947B</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/color_5D6392</item>
        <item name="android:textColorTertiary">@color/color_5D6392</item>

        <item name="colorBackgroundAccent">@color/color_9BAEC8</item>
        <item name="colorBackgroundPlaceholder">@color/color_E9EBF9</item>
        <item name="emptyLayoutButtonTextColor">?attr/textColorPrimary</item>
        <item name="android:popupMenuStyle">@style/App.PopupMenu.Style</item>

    </style>

    <style name="App.PopupMenu.Style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_background_menu</item>

    </style>

    <style name="App.AutoCompleteTextView.Style" parent="Base.Widget.MaterialComponents.AutoCompleteTextView">
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupElevation">0dp</item>
    </style>


    <style name="Theme.Splash.OpenVoice" parent="Theme.OpenVoice">
        <item name="android:windowBackground">@drawable/background_splash_new</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="Theme.Splash.OpenVoice.Dark" parent="Theme.OpenVoice">
        <item name="android:windowBackground">@drawable/background_splash_new</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:navigationBarColor">@color/color_00030F</item>
    </style>

    <style name="DefaultTextCellStyle">
        <item name="titleTextColor">?attr/textColorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DefaultTextSwitchStyle" parent="DefaultTextCellStyle">
        <item name="trackDefaultColor">?attr/colorOnPrimary</item>
        <item name="trackCheckedColor">?attr/colorPrimary</item>
        <item name="thumbColor">@color/white</item>
    </style>

    <style name="TransparentBottomDialog" parent="Theme.Design.BottomSheetDialog">
        <!-- 背景色 -->
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustNothing</item>
        <!-- 窗口背景透明度 -->
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="colorPrimary">@color/color_7FF7EC</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="colorPrimary">@color/color_7FF7EC</item>
    </style>

    <style name="TransparentDialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <!-- ShapeableImageView  圆形style -->
    <style name="circleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
