    <style name="roundedCornerStyle_RTB_2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
    </style>

    <style name="roundedCornerStyle_LT_RT_20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>

    </style>

    <style name="roundedCornerStyle_LTB_22">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeBottomLeft">22dp</item>

    </style>

    <style name="roundedCornerStyle_RT_RB_2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">2dp</item>
        <item name="cornerSizeTopRight">2dp</item>
    </style>

    <style name="roundedCornerStyle_LT_LB_2">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">2dp</item>
        <item name="cornerSizeTopLeft">2dp</item>
    </style>

    <style name="TransparentDialogNoAnimation" parent="@android:style/Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item>
        <!--透明背景-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background_dialog_confirm</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/color_7FF7EC</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!--弹窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ViewMediaActivity.AppBarLayout" parent="ThemeOverlay.AppCompat">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

</resources>